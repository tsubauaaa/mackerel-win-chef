# pidfile = "C:\path\to\pidfile"
# root = "C:\path\to\root"
verbose = false
apikey = "<%= node['mackerel-win']['apikey'] %>"

# Include other config files
# include = "C:\path\to\conf\*.conf"

# Configuration for connection
# [connection]
# post_metrics_dequeue_delay_seconds = 30 # delay for dequeuing from buffer queue (max value: 59)
# post_metrics_retry_delay_seconds = 60   # delay for retring a request that causes errors (max value: 180)
# post_metrics_retry_max = 10             # max numbers of retries for a request that causes errors
# post_metrics_buffer_size = 30           # max numbers of requests stored in buffer queue.

# Configuration for Custom Metrics Plugins
# see also: http://help-ja.mackerel.io/entry/advanced/custom-metrics
#
# [plugin.metrics.vmstat]
# command = "ruby C:\path\to\plugins\metrics-vmstat.rb"
# [plugin.metrics.curl]
# command = "ruby C:\path\to\plugins\metrics-curl.rb"
[plugin.metrics.diskqueuelength]
command = "powershell C:/mackerel-scripts/DiskQueueLength.ps1"
type = "metric"
[plugin.metrics.networkinterfacebyte]
command = "powershell C:/mackerel-scripts/NetworkInterfaceByte.ps1"
type = "metric"
[plugin.metrics.diskreadwritetime]
command = "powershell C:/mackerel-scripts/DiskReadWriteTime.ps1"
type = "metric"
[plugin.metrics.processthreadcount]
command = "powershell C:/mackerel-scripts/ProcessThreadCount.ps1"
type = "metric"
[plugin.metrics.threadcontextswitches]
command = "powershell C:/mackerel-scripts/ThreadContextSwitches.ps1"
type = "metric"
[plugin.metrics.networkconnectionstates]
command = "powershell C:/mackerel-scripts/NetworkConnectionStates.ps1"
type = "metric"
